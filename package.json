{
  "name": "my-electron-app",
  "version": "1.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "description": "Sandbox project for TDD training",
  "author": {
    "name": "De-risk team",
    "email": "derisk@3tsoftwarelabs.com"
  },
  "license": "Apache-2.0",
  "publishConfig": {
    "MartynovIvan:registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "dev": "cross-env DEV= vite",
    "build": "tsc && vite build && npm run copy-backend && electron-builder",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "copy-backend": "copyfiles -f backend/**/* dist-electron/",
    "rebuildDB": "electron-rebuild -f -w sqlite3",
    "test": "run-script-os",
    "test:default": "if [ -d dist ] && [ -d dist-electron ]; then jest; else tsc && vite build && npm run copy-backend && jest; fi",
    "test:windows": "if exist dist (if exist dist-electron (jest) else (tsc && vite build && npm run copy-backend && jest)) else (tsc && vite build && npm run copy-backend && jest)",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "bootstrap": "^5.3.3",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "mongodb": "^6.11.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sqlite3": "5.1.6"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jest": "^29.7.0",
    "playwright": "^1.49.1",
    "run-script-os": "^1.1.6",
    "ts-jest": "^29.2.5",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5"
  }
}